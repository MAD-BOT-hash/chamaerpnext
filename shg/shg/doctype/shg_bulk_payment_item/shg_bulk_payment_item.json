{
  "doctype": "DocType",
  "name": "SHG Bulk Payment Item",
  "module": "SHG",
  "istable": 1,
  "editable_grid": 1,
  "autoname": "hash",
  "fields": [

    {
      "fieldname": "reference_doctype",
