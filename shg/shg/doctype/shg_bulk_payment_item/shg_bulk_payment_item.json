      "fieldtype": "Select",
      "options": "SHG Contribution Invoice\nSHG Contribution\nSHG Meeting Fine",
      "reqd": 1,
      "in_list_view": 1
    },
    {
      "fieldname": "reference_name",
      "label": "Reference Name",
      "fieldtype": "Dynamic Link",
      "options": "reference_doctype",
      "reqd": 1,
      "in_list_view": 1
    },

    {
      "fieldname": "member",
      "label": "Member",
      "fieldtype": "Link",
      "options": "SHG Member",
      "read_only": 1,
      "in_list_view": 1
    },
    {
      "fieldname": "member_name",
      "label": "Member Name",
      "fieldtype": "Data",
      "read_only": 1
    },

    {
      "fieldname": "date",
      "label": "Document Date",
      "fieldtype": "Date",
      "read_only": 1,
      "in_list_view": 1
    },
    {
      "fieldname": "amount",
      "label": "Document Amount",
      "fieldtype": "Currency",
      "read_only": 1
    },

    {
      "fieldname": "outstanding_amount",
      "label": "Outstanding Amount",
      "fieldtype": "Currency",
      "read_only": 1,
      "in_list_view": 1
    },
    {
      "fieldname": "payment_amount",
      "label": "Payment Amount",
      "fieldtype": "Currency",
      "reqd": 1,
      "in_list_view": 1
    },

    {
      "fieldname": "status",
      "label": "Status",
      "fieldtype": "Data",
      "read_only": 1
    },
    {
      "fieldname": "is_closed",
      "label": "Closed",
      "fieldtype": "Check",
      "read_only": 1
    },
    {
      "fieldname": "posted_to_gl",
      "label": "Posted to GL",
      "fieldtype": "Check",
      "read_only": 1
    },

    {
      "fieldname": "remarks",
      "label": "Remarks",
      "fieldtype": "Small Text"
    }
  ],

  "engine": "InnoDB",
  "track_changes": 1,
  "permissions": [
    {
      "role": "System Manager",
      "read": 1,
      "write": 1,
      "create": 1,
      "delete": 1
    }
  ]
}